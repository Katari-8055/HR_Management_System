generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HR {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       Role      @default(HR)
  createdAt  DateTime  @default(now())
  address    String?
  birthday   DateTime?
  image      String?
  isVerified Boolean   @default(false)
  phone      String?
}

model Employee {
  id                String           @id @default(cuid())
  employeeId        String           @unique
  firstName         String
  lastName          String?
  email             String           @unique
  phone             String?
  dateOfBirth       DateTime?
  gender            Gender?          @default(OTHER)
  position          String?
  street            String?
  city              String?
  state             String?
  zip               String?
  country           String?
  dateOfJoining     DateTime?
  employmentType    EmploymentType   @default(FULL_TIME)
  status            EmploymentStatus @default(ACTIVE)
  salary            Float            @default(50000)
  accountNo         String?
  ifsc              String?
  bankName          String?
  emergencyName     String?
  emergencyRelation String?
  emergencyPhone    String?
  pan               String?          @unique
  aadhaar           String?          @unique
  passport          String?          @unique
  role              Roles            @default(EMPLOYEE)

  departmentId      String?
  projectId         String?

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  setupToken        String?
  setupTokenExpiry  DateTime?
  password          String?
  image             String?

  department  Department? @relation(fields: [departmentId], references: [id])
  project     Project?    @relation(fields: [projectId], references: [id])   // âœ… CLEAN
  managedProjects Project[] @relation("ProjectManager")
}

model Project {
  id          String     @id @default(cuid())
  name        String
  client      String
  description String?
  status      Status     @default(Ongoing)
  Deadline    DateTime?
  managerId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  members     Employee[]
  
  manager     Employee   @relation("ProjectManager", fields: [managerId], references: [id])
}

model Department {
  id        String     @id @default(cuid())
  name      String      @unique
  employees Employee[]
}



enum Status {
  Ongoing
  Pending
  Cancelled
  Completed
}

enum Role {
  HR
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  INTERN
  CONTRACT
}

enum EmploymentStatus {
  ACTIVE
  INACTIVE
  ON_LEAVE
  TERMINATED
}

enum Roles {
  HR
  MANAGER
  EMPLOYEE
}


